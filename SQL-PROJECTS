PROJECT 1

SELECT 
  employees.salary
FROM 
  hr.employees
  WHERE
  SALARY 
  BETWEEN 3000 AND 4000;

================

PROJECT 2

SELECT SUBSTRING(last_name,1,6), salary, hr.jobs.job_title 
FROM EMPLOYEES 
INNER JOIN hr.jobs
ON hr.employees.job_id=hr.jobs.job_id
WHERE length(last_name)>6;

===================

PROJECT 3

part A

select employee_id, last_name, salary, commission_pct, hire_date
from employees
where (salary > 8000
and hire_date > '1-jan-1997');

part B

SELECT MIN(salary) FROM hr.employees;

part C ***(UNFINISHED)

SELECT MAX(hr.employees.salary + hr.employees.salary * hr.employees.commission_pct)
FROM hr.employees 
where commission_pct IS NOT NULL
AND (salary > 8000
AND hire_date > '1-jan-1997')
UNION
SELECT MIN(salary)
FROM hr.employees;

===================

PROJECT 4

part A

SELECT first_name, last_name, department_name
FROM "hr"."employees"
INNER join departments
ON hr.employees.department_id=hr.departments.department_id;

part B

SELECT first_name, last_name, departments.department_name
FROM hr.employees, hr.departments
WHERE department_name = 'Sales';

==============================

